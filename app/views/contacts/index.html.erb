<p id="notice"><%= notice %></p>

<h1>Listing Contacts</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<button id="btn-toggle-details">Show/Hide Details</button>
</p>

<br>

<%= link_to 'New Contact', new_contact_path %>
